# Minimal training config for Colab A100
experiment_name: roadstalker_small

model:
  vision_encoder: "openai/clip-vit-large-patch14-336"
  llm: "mistralai/Mistral-7B-Instruct-v0.2"
  projector_dim: 4096
  use_lora: true

training:
  epochs: 3
  batch_size: 8
  lr: 2e-5
  optimizer: "adamw"
  max_length: 512
  gradient_accumulation: 2
  save_steps: 500

data:
  dataset: "bdd100k"
  data_dir: "data/processed/"
  train_split: "train.jsonl"
  val_split: "val.jsonl"

logging:
  wandb: true
  log_interval: 50
